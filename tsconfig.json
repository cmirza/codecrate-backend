{
    "compilerOptions": {
        "target": "ES2018",
        "module": "CommonJS",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "lib": ["ES2018", "DOM"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}